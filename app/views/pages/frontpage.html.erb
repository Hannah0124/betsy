<div class="frontpage">
  <div class="spotlight">
    <div class="newest_product_spotlight">
      <h4>New Product</h4>
      <div class="new_product_card">
        <% p = Product.order("created_at").first %>
        <%= link_to(image_tag(p.photo_url), product_path(p), class: "new_product")%>
          <div class="class="new_product_details"">
          <h3><%= p.name %></h3>
          </br>
            <p>Price: <strong>$<%= p.price %></strong></p> 
            <p>Sold by: 
              <strong>
              <%= User.find_by(id: p).name %>
              </strong>
            </p>
            <p>Description: <%= p.description %></p> 
            <p>Categories: <%= p.display_categories %></p>
          </div>
        </div>
    </div>

    <div class="featured_merchant_spotlight">
      <h4>Merchant Spotlight</h4>
      <div class="merchant_spotlight_card">
        <% u = User.limit(1).order("RANDOM()")[0] %>
        <%= link_to(image_tag(u.photo_url, class: "merchant_img"), user_path(u), class: "merchant_img")%>
          <div class="merchant_details">
          <h3><%= u.name %></h3>
          </br>
            <p>Joined: <%= u.created_at.strftime("%m/%d/%Y") %></p>
            <p>Species: <%= u.species %></p>
            <p>Personality: <%= u.personality %></p>
          </div>
          </br>
        </div>
    
    
      <h2 class="catchphrase">Catchphrase:  "<%= u.phrase %>"</h2>
    </div>
              
  </div>
  
 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100 " src="https://data.whicdn.com/images/340045133/original.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://static2.gamerantimages.com/wordpress/wp-content/uploads/2020/03/animal-crossing-new-horizons-1-2.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://assets.vg247.com/current/2020/03/able_sisters_shop_building_unlock.jpg" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="carousel">
    <h4 class="popular_products">Popular Products</h4>
    <div class="slider">
      <% Product.popular_products.each do |item| %>
        <div class="slider_card">
        <%= link_to(image_tag(item.photo_url, class:'slider_img'), product_path(item)) %>
        <div class="slider_details">
          <h5><%= item.name %></h5>
          <p><%= item.description %></p>
          <p><%= item.reviews.length %> reviews</p>
        </div>
      </div>
      <% end %>
    </div>
  </div>

    <div class="carousel">
      <h4 class="popular_products">Highest Rated Products</h4>
      <div class="slider">
        <% Product.top_rated_products.each do |item| %>
          <div class="slider_card">
            <%= link_to(image_tag(item.photo_url, class:'slider_img'), product_path(item)) %>
            <div class="slider_details">
              <h5><%= item.name %></h5>
              <p><%= item.description %></p>
              <p><%= item.average_rating %> average rating</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  <div class="phone_app">
    <%= image_tag("https://vignette.wikia.nocookie.net/animalcrossing/images/7/7a/Callmeonmynookphone.PNG/revision/latest?cb=20190611205152", class: 'frontpage_feature_img') %>
    <div class="frontpage_feature">
      <h4>
        <%= link_to "Download", root_path, class: "frontpage_feature_title" %>
      </h4>
      <%= image_tag("https://www.freeiconspng.com/uploads/white-download-icon-png-32.png", class: 'download_img') %>
    </div>
  </div> 
</div>
