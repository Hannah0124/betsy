<section class="product__form-container">
  <%= form_with model: @product do |f| %>
    
    <div class="form-group">
      <%= f.label :product_name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :categories %>
      <br>
      <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
    </div>


    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", placeholder: "3D Glasses can be found in New Horizons and New Leaf" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control", placeholder: "e.g. 500" %>
    </div>

    <div class="form-group">
      <%= f.label :inventory %>
      <%= f.text_field :inventory, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :active_status %>
      <%= f.select :active, [true, false], {}, {:class =>  "_form__select"} %>
    </div>

    <div class="form-group">
      <%= f.label :photo_url %>
      <%= f.text_area :photo_url, class: "form-control", placeholder: "e.g. https://i.ibb.co/0c4cHmM/leaf.png" %>
    </div>

    <%= f.submit action_name, class: "btn btn-primary" %>

  <% end %>
</section>
